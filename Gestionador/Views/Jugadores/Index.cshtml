@model IEnumerable<Gestionador.Models.Jugadores>

@{
    ViewData["Title"] = "Jugadores";
}
<div class="container">
    <div class="table-container">
        <div>
            <p>
                <a asp-action="Create" class="btn btn-primary">Create New</a>
            </p>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Edad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EquipoID)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Edad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EquipoID)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-warning">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .btn {
        border-radius: 20px; /* Forma redondeada */
        padding: 8px 16px; /* Espacio interno del botón */
    }

    .table-container {
        border: 1px solid #ccc; /* Borde del contenedor de la tabla */
        padding: 16px; /* Espacio interno del contenedor */
        margin-bottom: 20px; /* Espacio inferior entre el contenedor y otros elementos */
    }
</style>
